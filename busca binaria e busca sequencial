#include <stdio.h>

int procuraBinaria(int x, int vet[]){ //a lógica tá na direção certa, mas ainda precisa de ajustes
    int meio = (int)sizeof(vet)/2;

    if(x == vet[meio]){
        printf("\n%d", x);
    }else if(x < vet[meio]){
        return procuraBinaria(x, vet[meio]);
    }else{
        return procuraBinaria(x, vet[meio]);
    }
}

